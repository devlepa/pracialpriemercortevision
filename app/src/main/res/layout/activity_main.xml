<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Cámara en tiempo real -->
    <org.opencv.android.JavaCameraView
        android:id="@+id/cameraView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/galleryView" />

    <!-- 2) Imagen de galería (con/sin filtros) -->
    <ImageView
        android:id="@+id/galleryView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/cameraView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnGallery" />

    <!-- 3) Botón para abrir la galería -->
    <Button
        android:id="@+id/btnGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir galería"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/galleryView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/groupFilters" />

    <!-- 4) Filtros (barra inferior) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/groupFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnNone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sin filtro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnGray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/btnGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gris"
            app:layout_constraintStart_toEndOf="@id/btnNone"
            app:layout_constraintEnd_toStartOf="@id/btnCanny"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/btnCanny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Canny"
            app:layout_constraintStart_toEndOf="@id/btnGray"
            app:layout_constraintEnd_toStartOf="@id/btnSepia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/btnSepia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sepia"
            app:layout_constraintStart_toEndOf="@id/btnCanny"
            app:layout_constraintEnd_toStartOf="@id/btnCartoon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/btnCartoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cartoon"
            app:layout_constraintStart_toEndOf="@id/btnSepia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
